datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  location    String?
  start       DateTime
  end         DateTime
  allDay      Boolean  @default(false)
  color       String?  @default("#1a73e8")
  recurrence  String?  // RFC rrule string
  parentId    Int?     // for expanded/exception instances
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
